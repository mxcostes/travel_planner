                    <% if (activity.location) { %>
                        <a href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(activity.location) %>" 
                           target="_blank" 
                           class="btn btn-sm btn-success w-100">
                            üìç Location
                        </a>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</div>
        


